#include<iostream>
using namespace std;
int main()
{
	// declare variables
	double num1, num2;

	// this is take input from end-user
	cout << "Add two Numbers :: ";
	cin >> num1 >> num2;

	// this is addition of two number
	cout << num1 << "+" << num2 << " (Add) " << " = " << num1 + num2 << endl;

	// this is substraction of two number
	cout << num1 << "-" << num2 << " (Substract) " << " = " << num1 - num2 << endl;

	// this is multiplication of two number
	cout << num1 << "*" << num2 << " (Multiplication) " << " = " << num1 * num2 << endl;

	// this is division of two number
	cout << num1 << "/" << num2 << " (Division) " << " = " << num1 / num2 << endl;

	return 0;
}
